<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <header class="navbar navbar-fixed navbar-inverse navbar-block">
  <div id="container">
    <nav class="nav navbar-left text-success">
    <h3>Bookers</h3>
  </nav>
  <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
    <% if user_signed_in? %>
      <li class="">
        <%= link_to 'Home', user_path(current_user),class:"glyphicon glyphicon-home " %>
      </li>
      <li class="">
          <%= link_to 'Users', users_path,class:"glyphicon glyphicon-user"%>
      </li>
      <li class="">
        <%= link_to "Books", books_path,class:"glyphicon glyphicon-book" %>
      </li>
       <li class="">
         <%= link_to "logout", destroy_user_session_path,class:"glyphicon glyphicon-log-out", method: :delete%>
      </li>
    <% else %>
      <li class="">
        <%= link_to "Home", root_path,class:"glyphicon glyphicon-home"%>
      </li>
      <li class="">
        <%= link_to "About", home_about_path,class:"glyphicon glyphicon-link"%>
      </li>
      <li class="">
        <%= link_to "Sign Up", new_user_registration_path,class:"glyphicon glyphicon-new-window"  %>
      </li>
      <li class="">
             <%= link_to " Login", new_user_session_path,class:"glyphicon glyphicon-log-in"%>
      </li>
    <% end %>
  </ul>
</div>
</header>


    <%= yield %>
  </body>
</html>
